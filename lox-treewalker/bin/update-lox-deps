#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

pushd ../lox-parser
rm -rf pkg
bundle install
rake build
popd

pushd ../lox-test
rm -rf pkg
bundle install
rake build
popd

for gem in ../lox-parser/pkg/*.gem; do
  gem install "$gem"
done

for gem in ../lox-test/pkg/*.gem; do
  gem install "$gem"
done

#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

pushd ../rblox-parser
rm -rf pkg
bundle install
rake build
popd

pushd ../rblox-test
rm -rf pkg
bundle install
rake build
popd

for gem in ../rblox-parser/pkg/*.gem; do
  gem install "$gem"
done

for gem in ../rblox-test/pkg/*.gem; do
  gem install "$gem"
done
